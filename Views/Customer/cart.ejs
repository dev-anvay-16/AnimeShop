<%- include('../includes/head.ejs') %>

 <link rel="stylesheet" href="/Styles/home.css">
<link rel="stylesheet" href="/Styles/cartejs.css">
</head>

<%- include('../includes/navigation.ejs') %>

<div class="cartPage">
  <% if(products.length > 0){%>
  <div class="cartHeading">
    <h2>Shopping Cart</h2>
    <h3>Price</h3>
  </div>
  <div class="linebreak">
  </div>
  <% for(let product of products) {%>
  <div class="cartContent">
    <div class="left">
      <img src="<%= product.productData.imageUrl %>" alt="">
    </div>
    <div class="mid">
      <h3 class="title"><%= product.productData.title %></h3>
      
       <form action="/cart-delete" class="qAndA" method="POST"> 
         <h3 class="quantity">Quantity : <%= product.quantity %></h3>
         <input type="hidden" value="<%= product.productData.id %>" name="productId">
        <button class="delete">Delete</button>
      </form>  
    </div>
    <div class="right">
      <h3 class="INR">&#8377 &nbsp</h3>
      <h3 class="amount"><%= product.productData.price %></h3>
    </div>
  </div>
  <div class="linebreak2"></div>
  <% }%>
  <div class="totalSum">
    <p class="sub" >Subtotal (<%= products.length  %>&nbsp; <% if(products.length > 1) {%>items<% }else{ %> item <%}%>):</>
    <h3 class="INR">&nbsp &#8377 &nbsp</h3>
    <h3 class="total" ><%= totalPrice %></h3>
  </div>
  

  <%}else{%>
    <div class="nothing"> <h3>Nothing To Display</h3></div>
  <% } %>  

</div>


<%- include('../includes/end.ejs') %>